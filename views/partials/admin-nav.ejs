<script>
// Load live stores function (used in navigation)
function loadLiveStores() {
    fetch('/api/stores')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const liveStores = data.stores.filter(s => s.deployment_status === 'deployed');
                if (liveStores.length === 0) {
                    alert('No live stores found. Deploy some stores first!');
                    return;
                }
                
                let message = 'Live Stores:\n\n';
                liveStores.forEach(store => {
                    message += `• ${store.name}\n  https://${store.domain}\n\n`;
                });
                
                alert(message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to load live stores');
        });
}

// Auto-hide notifications after some time
document.addEventListener('DOMContentLoaded', function() {
    const notificationBadge = document.querySelector('.notification-badge');
    if (notificationBadge) {
        // Simulate reading notifications after 30 seconds
        setTimeout(() => {
            notificationBadge.style.display = 'none';
        }, 30000);
    }
});
