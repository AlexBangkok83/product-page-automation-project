<!-- Sidebar -->
<div class="w-64 bg-white border-r border-gray-200 flex flex-col">
    <!-- Logo/Brand -->
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center">
            <i data-lucide="store" class="w-8 h-8 text-blue-600"></i>
            <span class="ml-2 text-lg font-semibold text-gray-900">MultiStore</span>
        </div>
    </div>
    
    <!-- Navigation -->
    <nav class="flex-1 px-4 py-6 space-y-1">
        <!-- Dashboard -->
        <a href="/admin-v2" class="flex items-center px-3 py-2 text-sm font-medium <%= currentPage === 'dashboard' ? 'text-blue-600 bg-blue-50' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-50' %> rounded-lg">
            <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
            Dashboard
        </a>
        
        <!-- Companies -->
        <div class="pt-4">
            <div class="flex items-center px-3 py-1 text-xs font-medium text-gray-500">
                COMPANIES
            </div>
            <div class="mt-1 space-y-1">
                <!-- Nextsite Company -->
                <div class="space-y-1">
                    <a href="/admin-v2/company/nextsite" class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg">
                        <i data-lucide="building-2" class="w-4 h-4 mr-3"></i>
                        Nextsite
                    </a>
                    
                    <!-- Company Settings -->
                    <a href="/admin-v2/company/settings" class="flex items-center px-3 py-2 text-sm font-medium <%= currentPage === 'company-settings' ? 'text-blue-600 bg-blue-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50' %> rounded-lg ml-3">
                        <i data-lucide="settings" class="w-4 h-4 mr-3"></i>
                        Company Settings
                    </a>
                    
                    <!-- Design Library -->
                    <a href="/admin-v2/company/design" class="flex items-center px-3 py-2 text-sm font-medium <%= currentPage === 'design-library' ? 'text-blue-600 bg-blue-50' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50' %> rounded-lg ml-3">
                        <i data-lucide="palette" class="w-4 h-4 mr-3"></i>
                        Design Library
                    </a>
                    
                    <div class="pt-2">
                        <div class="flex items-center px-3 py-1 text-xs font-medium text-gray-500">
                            Shopify Connections
                        </div>
                        <div class="ml-3 mt-1 space-y-1">
                            <% if (typeof shopifyStores !== 'undefined' && shopifyStores && shopifyStores.length > 0) { %>
                                <% shopifyStores.forEach(shopifyStore => { %>
                                    <% 
                                        // Extract domain part for URL (e.g., "ecominter" from "ecominter.myshopify.com")
                                        const domainPart = shopifyStore.shopify_domain.replace('.myshopify.com', '');
                                    %>
                                    <a href="/admin-v2/shopify/<%= domainPart %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-lg">
                                        <i data-lucide="shopping-bag" class="w-4 h-4 mr-3"></i>
                                        <%= shopifyStore.shopify_domain %>
                                    </a>
                                    <div class="ml-6 space-y-1">
                                        <!-- Active stores under this Shopify connection -->
                                        <% if (typeof stores !== 'undefined' && stores && stores.length > 0) { %>
                                            <% const connectionStores = stores.filter(store => store.shopify_domain === shopifyStore.shopify_domain); %>
                                            <% connectionStores.forEach(store => { %>
                                                <% if (store.status === 'active') { %>
                                                    <a href="/admin-v2/store/<%= store.uuid %>" class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg">
                                                        <i data-lucide="globe" class="w-3 h-3 mr-3"></i>
                                                        <%= store.domain %>
                                                    </a>
                                                <% } else if (store.status === 'draft') { %>
                                                    <div class="flex items-center px-3 py-2 text-sm font-medium text-gray-400 rounded-lg">
                                                        <i data-lucide="file-text" class="w-3 h-3 mr-3"></i>
                                                        <span class="opacity-60"><%= store.domain %></span>
                                                        <span class="ml-1 text-xs text-red-500">(draft)</span>
                                                    </div>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <a href="/admin-v2/shopify/ecominter" class="flex items-center px-3 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-lg">
                                    <i data-lucide="shopping-bag" class="w-4 h-4 mr-3"></i>
                                    ecominter.myshopify.com
                                </a>
                                <div class="ml-6 space-y-1">
                                    <!-- Fallback for clipia.de if no dynamic data -->
                                    <a href="/admin-v2/store/882eacac-d9fa-411c-a9f8-7415c26240b9" class="flex items-center px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700 hover:bg-gray-50 rounded-lg">
                                        <i data-lucide="globe" class="w-3 h-3 mr-3"></i>
                                        clipia.de
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Bottom section -->
    <div class="px-4 py-4 border-t border-gray-200">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                    <i data-lucide="user" class="w-4 h-4 text-gray-600"></i>
                </div>
            </div>
            <div class="ml-3">
                <div class="text-sm font-medium text-gray-900">Admin</div>
                <div class="text-xs text-gray-500">admin@company.com</div>
            </div>
        </div>
    </div>
</div>