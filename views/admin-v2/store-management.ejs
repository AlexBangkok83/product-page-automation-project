    <script>
        lucide.createIcons();
        
        // Deploy Changes functionality
        document.getElementById('deploy-changes')?.addEventListener('click', async function() {
            const button = this;
            const originalText = button.innerHTML;
            
            // Show loading state
            button.innerHTML = '<i data-lucide="loader-2" class="w-4 h-4 mr-2 animate-spin"></i>Deploying...';
            button.disabled = true;
            
            try {
                const response = await fetch('/admin-v2/store/deploy', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ storeId: '882eacac-d9fa-411c-a9f8-7415c26240b9' })
                });
                
                if (response.ok) {
                    button.innerHTML = '<i data-lucide="check" class="w-4 h-4 mr-2"></i>Deployed!';
                    button.classList.add('bg-green-600');
                    button.classList.remove('bg-blue-600');
                    
                    showNotification('Store deployed successfully', 'success');
                } else {
                    throw new Error('Deployment failed');
                }
            } catch (error) {
                console.error('Deployment error:', error);
                button.innerHTML = '<i data-lucide="x" class="w-4 h-4 mr-2"></i>Failed';
                button.classList.add('bg-red-600');
                button.classList.remove('bg-blue-600');
                
                showNotification('Deployment failed', 'error');
            } finally {
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.disabled = false;
                    button.classList.remove('bg-green-600', 'bg-red-600');
                    button.classList.add('bg-blue-600');
                    lucide.createIcons();
                }, 3000);
            }
        });
        
        // Add Page functionality
        document.getElementById('add-page')?.addEventListener('click', function() {
            window.location.href = '/admin-v2/store/882eacac-d9fa-411c-a9f8-7415c26240b9/page/create';
        });
        
        // Sync Products functionality
        document.getElementById('sync-products')?.addEventListener('click', async function() {
            const button = this;
            const originalText = button.innerHTML;
            
            button.innerHTML = '<i data-lucide="loader-2" class="w-4 h-4 mr-2 animate-spin"></i>Syncing...';
            button.disabled = true;
            
            try {
                const response = await fetch('/admin-v2/shopify/sync-products', {
                    method: 'POST'
                });
                
                if (response.ok) {
                    showNotification('Products synced successfully', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    throw new Error('Sync failed');
                }
            } catch (error) {
                console.error('Sync error:', error);
                showNotification('Product sync failed', 'error');
            } finally {
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.disabled = false;
                    lucide.createIcons();
                }, 2000);
            }
        });
        
        // Edit buttons for pages and products
        document.querySelectorAll('.edit-button').forEach((button, index) => {
            button.addEventListener('click', function() {
                const pageTypes = ['home', 'products', 'about', 'contact'];
                const productHandles = ['elegante-solbriller-for-alle', 'klipia-clip'];
                
                // First 4 buttons are pages, next 2 are products
                if (index < 4) {
                    const pageType = pageTypes[index];
                    window.location.href = `/admin-v2/store/882eacac-d9fa-411c-a9f8-7415c26240b9/page/${pageType}/edit`;
                } else {
                    const productIndex = index - 4;
                    if (productHandles[productIndex]) {
                        window.location.href = `/admin-v2/product/${productHandles[productIndex]}/edit`;
                    }
                }
            });
        });
        
        // View all pages
        document.getElementById('view-all-pages')?.addEventListener('click', function() {
            window.location.href = '/admin-v2/store/882eacac-d9fa-411c-a9f8-7415c26240b9/pages';
        });
        
        // Manage all products
        document.getElementById('manage-all-products')?.addEventListener('click', function() {
            window.location.href = '/admin-v2/products';
        });
        
        // Theme Management
        const themeSelector = document.getElementById('theme-selector');
        const saveThemeBtn = document.getElementById('save-theme');
        const deployThemeBtn = document.getElementById('deploy-theme');
        const currentThemeName = document.getElementById('current-theme-name');
        
        // Theme colors for preview
        const themeColors = {
            'default': { primary: '#667eea', secondary: '#764ba2', accent: '#f093fb' },
            '1': { primary: '#667eea', secondary: '#764ba2', accent: '#f093fb' },
            '2': { primary: '#dc2626', secondary: '#991b1b', accent: '#f59e0b' },
            '3': { primary: '#b91c1c', secondary: '#7f1d1d', accent: '#d97706' },
            '4': { primary: '#0ea5e9', secondary: '#0284c7', accent: '#06b6d4' },
            '5': { primary: '#059669', secondary: '#047857', accent: '#10b981' }
        };
        
        const themeNames = {
            'default': 'Default Theme',
            '1': 'Modern E-commerce',
            '2': 'Bold Red Commerce', 
            '3': 'Elegant Red Luxury',
            '4': 'Ocean Blue Fresh',
            '5': 'Forest Green Nature'
        };
        
        // Set current theme in selector
        themeSelector.value = '<%= store.theme_id || "default" %>';
        currentThemeName.textContent = themeNames[themeSelector.value];
        updateThemePreview();
        
        // Theme selector change handler
        themeSelector.addEventListener('change', function() {
            updateThemePreview();
            saveThemeBtn.disabled = false;
        });
        
        // Update theme preview colors
        function updateThemePreview() {
            const selectedTheme = themeSelector.value;
            const colors = themeColors[selectedTheme];
            
            document.getElementById('preview-primary').style.backgroundColor = colors.primary;
            document.getElementById('preview-secondary').style.backgroundColor = colors.secondary;
            document.getElementById('preview-accent').style.backgroundColor = colors.accent;
        }
        
        // Save theme
        saveThemeBtn.addEventListener('click', async function() {
            const originalText = saveThemeBtn.textContent;
            saveThemeBtn.textContent = 'Saving...';
            saveThemeBtn.disabled = true;
            
            try {
                const response = await fetch(`/admin-v2/store/<%= store.uuid %>/theme`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        theme_id: themeSelector.value
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    currentThemeName.textContent = themeNames[themeSelector.value];
                    deployThemeBtn.disabled = false;
                    
                    // Show success message
                    const successMsg = document.createElement('div');
                    successMsg.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg z-50';
                    successMsg.textContent = 'Theme saved successfully!';
                    document.body.appendChild(successMsg);
                    
                    setTimeout(() => successMsg.remove(), 3000);
                } else {
                    alert('Failed to save theme: ' + result.error);
                }
            } catch (error) {
                alert('Error saving theme: ' + error.message);
            } finally {
                saveThemeBtn.textContent = originalText;
                saveThemeBtn.disabled = false;
            }
        });
        
        // Deploy theme changes
        deployThemeBtn.addEventListener('click', async function() {
            const originalText = deployThemeBtn.textContent;
            deployThemeBtn.textContent = 'Deploying...';
            deployThemeBtn.disabled = true;
            
            try {
                const response = await fetch(`/admin-v2/store/<%= store.uuid %>/deploy`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    const successMsg = document.createElement('div');
                    successMsg.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg z-50';
                    successMsg.innerHTML = `
                        <div><strong>Theme deployed successfully!</strong></div>
                        <div class="text-sm mt-1">Live URL: <a href="https://<%= store.domain %>" target="_blank" class="underline">https://<%= store.domain %></a></div>
                    `;
                    document.body.appendChild(successMsg);
                    
                    setTimeout(() => successMsg.remove(), 8000);
                } else {
                    alert('Failed to deploy theme: ' + result.error);
                }
            } catch (error) {
                alert('Error deploying theme: ' + error.message);
            } finally {
                deployThemeBtn.textContent = originalText;
                deployThemeBtn.disabled = false;
            }
        });
        
        // Edit Store Settings
        document.getElementById('edit-store-settings')?.addEventListener('click', function() {
            window.location.href = '/admin-v2/store/882eacac-d9fa-411c-a9f8-7415c26240b9/settings';
        });
        
        // Notification system
        function showNotification(message, type = 'info') {
            const existing = document.querySelector('.notification');
            if (existing) existing.remove();
            
            const notification = document.createElement('div');
            notification.className = `notification fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-600 text-white' : 
                type === 'error' ? 'bg-red-600 text-white' : 
                'bg-blue-600 text-white'
            }`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
    </script>
</body>
</html>