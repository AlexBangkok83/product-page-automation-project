                } else {
                    // Steps 1-4: Show Next button, hide Launch Store
                    if (nextBtn) {
                        nextBtn.style.display = 'block';
                    }
                    if (submitBtn) {
                        submitBtn.style.display = 'none';
                    }
                    console.log(' Step', this.currentStep, ': Showing Next button');
                }
            }
            
