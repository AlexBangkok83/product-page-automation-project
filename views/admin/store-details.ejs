<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-shop"></i> MultiStore Platform
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/site-setup">Site Setup</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/product-template">Template Builder</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><%= store.name %></li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">
                            <div class="avatar bg-primary text-white rounded-circle me-3 d-inline-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <%= store.name.charAt(0).toUpperCase() %>
                            </div>
                            <%= store.name %>
                        </h1>
                        <p class="text-muted mb-0">Store Details & Management</p>
                    </div>
                    <div>
                        <a href="https://<%= store.domain %>" target="_blank" class="btn btn-outline-primary me-2">
                            <i class="bi bi-box-arrow-up-right me-2"></i>Visit Store
                        </a>
                        <a href="/admin/site-setup?store=<%= store.uuid %>" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Store Overview -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Store Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Basic Details</h6>
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td><strong>Store Name:</strong></td>
                                        <td><%= store.name %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Domain:</strong></td>
                                        <td>
                                            <a href="https://<%= store.domain %>" target="_blank" class="text-decoration-none">
                                                <%= store.domain %>
                                                <i class="bi bi-box-arrow-up-right ms-1"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>UUID:</strong></td>
                                        <td><code><%= store.uuid %></code></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            <% if (store.status === 'active') { %>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            <% } else if (store.status === 'pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock me-1"></i>Pending
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-pause-circle me-1"></i>Inactive
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Localization</h6>
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td><strong>Country:</strong></td>
                                        <td><%= store.country %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Currency:</strong></td>
                                        <td><%= store.currency %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Language:</strong></td>
                                        <td><%= store.language %></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Created:</strong></td>
                                        <td><%= new Date(store.created_at).toLocaleDateString() %></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <% if (store.meta_title || store.meta_description) { %>
                            <hr>
                            <h6 class="text-muted">SEO Settings</h6>
                            <% if (store.meta_title) { %>
                                <p><strong>Meta Title:</strong> <%= store.meta_title %></p>
                            <% } %>
                            <% if (store.meta_description) { %>
                                <p><strong>Meta Description:</strong> <%= store.meta_description %></p>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-shop me-2"></i>Shopify Integration
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (store.shopify_connected) { %>
                            <div class="text-center mb-3">
                                <div class="display-6 text-success mb-2">
                                    <i class="bi bi-check-circle-fill"></i>
                                </div>
                                <h6 class="text-success">Connected</h6>
                            </div>
                            <table class="table table-borderless table-sm">
                                <tr>
                                    <td><strong>Domain:</strong></td>
                                    <td><%= store.shopify_domain %></td>
                                </tr>
                                <tr>
                                    <td><strong>Token:</strong></td>
                                    <td><code>****<%= store.shopify_access_token ? store.shopify_access_token.slice(-4) : 'None' %></code></td>
                                </tr>
                            </table>
                        <% } else { %>
                            <div class="text-center">
                                <div class="display-6 text-muted mb-2">
                                    <i class="bi bi-x-circle"></i>
                                </div>
                                <h6 class="text-muted">Not Connected</h6>
                                <p class="small text-muted mb-3">Connect your Shopify store to sync products</p>
                                <a href="/admin/site-setup?store=<%= store.uuid %>" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-link me-1"></i>Connect Shopify
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Store Settings -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-gear me-2"></i>Store Settings
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Shipping & Returns</h6>
                                <% if (store.shipping_info) { %>
                                    <p><strong>Shipping Policy:</strong><br>
                                    <%= store.shipping_info %></p>
                                <% } %>
                                <% if (store.shipping_time) { %>
                                    <p><strong>Delivery Time:</strong> <%= store.shipping_time %></p>
                                <% } %>
                                <% if (store.return_policy) { %>
                                    <p><strong>Return Policy:</strong><br>
                                    <%= store.return_policy %></p>
                                <% } %>
                                <% if (store.return_period) { %>
                                    <p><strong>Return Period:</strong> <%= store.return_period %></p>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Contact & Legal</h6>
                                <% if (store.support_email) { %>
                                    <p><strong>Support Email:</strong> 
                                    <a href="mailto:<%= store.support_email %>"><%= store.support_email %></a></p>
                                <% } %>
                                <% if (store.support_phone) { %>
                                    <p><strong>Support Phone:</strong> 
                                    <a href="tel:<%= store.support_phone %>"><%= store.support_phone %></a></p>
                                <% } %>
                                <% if (store.business_address) { %>
                                    <p><strong>Business Address:</strong><br>
                                    <%= store.business_address %></p>
                                <% } %>
                                <% if (store.gdpr_compliant || store.cookie_consent) { %>
                                    <p><strong>Compliance:</strong><br>
                                    <% if (store.gdpr_compliant) { %>
                                        <span class="badge bg-success me-1">GDPR Compliant</span>
                                    <% } %>
                                    <% if (store.cookie_consent) { %>
                                        <span class="badge bg-info">Cookie Consent</span>
                                    <% } %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Selected Pages -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-grid-3x3 me-2"></i>Selected Pages
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (store.selected_pages) { %>
                            <% const selectedPages = store.selected_pages.split(','); %>
                            <div class="row">
                                <% selectedPages.forEach(function(page) { %>
                                    <div class="col-md-3 col-sm-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <% if (page === 'home') { %>
                                                    <i class="bi bi-house-door text-primary"></i>
                                                <% } else if (page === 'products') { %>
                                                    <i class="bi bi-grid-3x3-gap text-primary"></i>
                                                <% } else if (page === 'about') { %>
                                                    <i class="bi bi-info-circle text-primary"></i>
                                                <% } else if (page === 'contact') { %>
                                                    <i class="bi bi-envelope text-primary"></i>
                                                <% } else if (page === 'blog') { %>
                                                    <i class="bi bi-journal-text text-primary"></i>
                                                <% } else if (page === 'faq') { %>
                                                    <i class="bi bi-question-circle text-primary"></i>
                                                <% } else if (page === 'terms') { %>
                                                    <i class="bi bi-file-text text-primary"></i>
                                                <% } else if (page === 'privacy') { %>
                                                    <i class="bi bi-shield-check text-primary"></i>
                                                <% } else { %>
                                                    <i class="bi bi-file-earmark text-primary"></i>
                                                <% } %>
                                            </div>
                                            <div>
                                                <h6 class="mb-0"><%= page.charAt(0).toUpperCase() + page.slice(1) %></h6>
                                                <small class="text-muted">Page</small>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No pages selected</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Management -->
        <% if (store.shopify_connected) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-box me-2"></i>Product Management
                        </h5>
                        <button class="btn btn-outline-primary btn-sm" onclick="loadShopifyProducts()">
                            <i class="bi bi-arrow-clockwise me-1"></i>Refresh Products
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="text-muted mb-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Select products to display on this store from your Shopify catalog.
                                </p>
                                <div class="d-flex gap-2 mb-3">
                                    <span class="badge bg-success">Connected to <%= store.shopify_shop_name || store.shopify_domain %></span>
                                    <span class="badge bg-secondary" id="productCount">Loading products...</span>
                                </div>
                            </div>
                            <div class="col-md-6 text-end">
                                <button class="btn btn-sm btn-outline-success me-2" onclick="selectAllProducts()">
                                    <i class="bi bi-check-all me-1"></i>Select All
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deselectAllProducts()">
                                    <i class="bi bi-x-circle me-1"></i>Deselect All
                                </button>
                            </div>
                        </div>
                        
                        <div id="productsList" class="row">
                            <div class="col-12 text-center p-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading products...</span>
                                </div>
                                <p class="mt-2 text-muted">Loading products from Shopify...</p>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <button class="btn btn-primary me-2" onclick="saveSelectedProducts()" disabled id="saveProductsBtn">
                                    <i class="bi bi-check-circle me-2"></i>Save Product Selection
                                </button>
                                <button class="btn btn-outline-primary" onclick="showProductManager()">
                                    <i class="bi bi-pencil-square me-2"></i>Manage Product Pages
                                </button>
                                <small class="text-muted ms-3 d-block mt-2">Changes will be applied when you regenerate the store.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Actions -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0">
                        <h5 class="mb-0">
                            <i class="bi bi-tools me-2"></i>Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <a href="/admin/site-setup?store=<%= store.uuid %>" class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-pencil me-2"></i>Edit Settings
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="https://<%= store.domain %>" target="_blank" class="btn btn-outline-primary w-100 mb-2">
                                    <i class="bi bi-box-arrow-up-right me-2"></i>Visit Store
                                </a>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary w-100 mb-2" disabled>
                                    <i class="bi bi-download me-2"></i>Export Data
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-danger w-100 mb-2" onclick="deleteStore('<%= store.uuid %>')">
                                    <i class="bi bi-trash me-2"></i>Delete Store
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2024 MultiStore Platform. Built with excellence by the Dream Team.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function deleteStore(storeUuid) {
            if (confirm('Are you sure you want to delete this store? This action cannot be undone.')) {
                fetch(`/api/stores/${storeUuid}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/admin';
                    } else {
                        alert('Failed to delete store: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete store');
                });
            }
        }

        // Product Management Functions
        let availableProducts = [];
        let selectedProductIds = [];

        async function loadShopifyProducts() {
            try {
                const response = await fetch('/api/store/<%= store.uuid %>/products');
                const data = await response.json();
                
                if (data.success) {
                    availableProducts = data.products;
                    document.getElementById('productCount').textContent = `${data.products.length} products available`;
                    renderProductsList();
                } else {
                    document.getElementById('productsList').innerHTML = `
                        <div class="col-12 text-center p-4">
                            <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
                            <p class="mt-2 text-danger">Failed to load products: ${data.error}</p>
                            <button class="btn btn-outline-primary btn-sm" onclick="loadShopifyProducts()">
                                <i class="bi bi-arrow-clockwise me-1"></i>Try Again
                            </button>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading products:', error);
                document.getElementById('productsList').innerHTML = `
                    <div class="col-12 text-center p-4">
                        <i class="bi bi-wifi-off text-danger fs-1"></i>
                        <p class="mt-2 text-danger">Connection error. Please try again.</p>
                    </div>
                `;
            }
        }

        function renderProductsList() {
            const container = document.getElementById('productsList');
            
            if (availableProducts.length === 0) {
                container.innerHTML = `
                    <div class="col-12 text-center p-4">
                        <i class="bi bi-box text-muted fs-1"></i>
                        <p class="mt-2 text-muted">No products found in your Shopify store.</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = availableProducts.map(product => {
                const mainImage = product.images && product.images.length > 0 ? product.images[0].src : null;
                const mainVariant = product.variants && product.variants.length > 0 ? product.variants[0] : null;
                const price = mainVariant ? mainVariant.price : 0;
                const isSelected = selectedProductIds.includes(product.id);

                return `
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100 ${isSelected ? 'border-primary' : ''}">
                            <div class="position-relative">
                                ${mainImage ? 
                                    `<img src="${mainImage}" class="card-img-top" style="height: 150px; object-fit: cover;" alt="${product.title}">` :
                                    `<div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
                                        <i class="bi bi-image text-muted fs-1"></i>
                                    </div>`
                                }
                                <div class="position-absolute top-0 end-0 p-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" 
                                               id="product_${product.id}" 
                                               ${isSelected ? 'checked' : ''}
                                               onchange="toggleProduct('${product.id}')">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">${product.title}</h6>
                                ${product.vendor ? `<small class="text-muted">by ${product.vendor}</small>` : ''}
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold text-primary">$${price}</span>
                                        <small class="text-muted">${product.variants ? product.variants.length : 0} variant(s)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            document.getElementById('saveProductsBtn').disabled = false;
        }

        function toggleProduct(productId) {
            if (selectedProductIds.includes(productId)) {
                selectedProductIds = selectedProductIds.filter(id => id !== productId);
            } else {
                selectedProductIds.push(productId);
            }
            renderProductsList();
        }

        function selectAllProducts() {
            selectedProductIds = availableProducts.map(p => p.id);
            renderProductsList();
        }

        function deselectAllProducts() {
            selectedProductIds = [];
            renderProductsList();
        }

        async function saveSelectedProducts() {
            try {
                const response = await fetch('/api/store/<%= store.uuid %>/products', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        selectedProducts: selectedProductIds
                    })
                });

                const data = await response.json();
                if (data.success) {
                    alert(`Successfully saved selection of ${selectedProductIds.length} products!`);
                } else {
                    alert('Failed to save product selection: ' + data.error);
                }
            } catch (error) {
                console.error('Error saving products:', error);
                alert('Failed to save product selection');
            }
        }

        // Show product management modal
        function showProductManager() {
            if (availableProducts.length === 0) {
                alert('Please load products first by clicking "Refresh Products"');
                return;
            }

            // Create modal content
            const modalContent = `
                <div class="modal fade" id="productManagerModal" tabindex="-1">
                    <div class="modal-dialog modal-xl">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="bi bi-pencil-square me-2"></i>Manage Product Pages
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Status</th>
                                                <th>Custom Content</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            ${availableProducts.map(product => {
                                                const mainImage = product.images && product.images.length > 0 ? product.images[0].src : null;
                                                const mainVariant = product.variants && product.variants.length > 0 ? product.variants[0] : null;
                                                const price = mainVariant ? mainVariant.price : 0;
                                                
                                                return `
                                                    <tr>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                ${mainImage ? 
                                                                    `<img src="${mainImage}" class="me-3" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" alt="${product.title}">` :
                                                                    `<div class="me-3 bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; border-radius: 4px;">
                                                                        <i class="bi bi-image text-muted"></i>
                                                                    </div>`
                                                                }
                                                                <div>
                                                                    <h6 class="mb-0">${product.title}</h6>
                                                                    <small class="text-muted">$${price} â€¢ ${product.handle}</small>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-success">Active</span>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-secondary">Default</span>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a href="/admin/store/<%= store.uuid %>/product/${product.handle}/edit" class="btn btn-sm btn-outline-primary">
                                                                    <i class="bi bi-pencil me-1"></i>Edit Page
                                                                </a>
                                                                <a href="/products/${product.handle}" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                                    <i class="bi bi-eye me-1"></i>View
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                `;
                                            }).join('')}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // Remove existing modal if any
            const existingModal = document.getElementById('productManagerModal');
            if (existingModal) {
                existingModal.remove();
            }

            // Add modal to page
            document.body.insertAdjacentHTML('beforeend', modalContent);
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('productManagerModal'));
            modal.show();
        }

        // Load products on page load if Shopify is connected
        <% if (store.shopify_connected) { %>
        document.addEventListener('DOMContentLoaded', function() {
            loadShopifyProducts();
        });
        <% } %>
    </script>
</body>
