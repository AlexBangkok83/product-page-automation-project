<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <style>
        .theme-card {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: white;
            height: 100%;
        }
        
        .theme-card:hover {
            border-color: #667eea;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
            transform: translateY(-2px);
        }
        
        .theme-preview {
            height: 200px;
            background: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px 10px 0 0;
            position: relative;
            overflow: hidden;
        }
        
        .theme-preview-wireframe {
            width: 80%;
            height: 80%;
            background: white;
            border: 2px dashed #ccc;
            display: flex;
            flex-direction: column;
            padding: 8px;
            font-size: 8px;
            color: #666;
            font-family: monospace;
        }
        
        .wireframe-header {
            border: 1px solid #ddd;
            padding: 2px;
            margin: 1px 0;
            background: #f0f0f0;
            text-align: center;
            height: 15%;
        }
        
        .wireframe-main {
            border: 1px solid #ddd;
            padding: 2px;
            margin: 1px 0;
            background: #f9f9f9;
            text-align: center;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .wireframe-footer {
            border: 1px solid #ddd;
            padding: 2px;
            margin: 1px 0;
            background: #f0f0f0;
            text-align: center;
            height: 15%;
        }
        
        .theme-info {
            padding: 1.5rem;
        }
        
        .theme-actions {
            padding: 0 1.5rem 1.5rem;
        }
        
        .default-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #28a745;
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 600;
        }
        
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 2rem;
        }
        
        .create-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            color: white;
            padding: 12px 24px;
            font-weight: 600;
            transition: transform 0.2s ease;
        }
        
        .create-btn:hover {
            transform: translateY(-2px);
            color: white;
        }

        .theme-color-preview {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 4px;
            border: 1px solid #ddd;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Include Admin Navigation -->
    <%- include('../partials/admin-nav') %>
    
    <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="mb-1">
                            <i class="bi bi-palette me-2"></i>Themes Library
                        </h2>
                        <p class="text-muted mb-0">Manage your website themes and designs</p>
                    </div>
                    <div>
                        <a href="/admin/themes/builder" class="btn create-btn">
                            <i class="bi bi-plus-circle me-2"></i>Create New Theme
                        </a>
                    </div>
                </div>
                
                <!-- Stats Overview -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="stats-card text-center">
                            <h3 class="mb-0"><%= themes.length %></h3>
                            <small>Total Themes</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-success text-white text-center" style="border-radius: 15px; padding: 2rem;">
                            <h3 class="mb-0"><%= themes.filter(t => t.is_default).length %></h3>
                            <small>Default Theme</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-info text-white text-center" style="border-radius: 15px; padding: 2rem;">
                            <h3 class="mb-0">0</h3>
                            <small>Active Stores</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-warning text-white text-center" style="border-radius: 15px; padding: 2rem;">
                            <h3 class="mb-0">0</h3>
                            <small>Customizations</small>
                        </div>
                    </div>
                </div>
                
                <!-- Themes Grid -->
                <div class="row">
                    <% if (themes && themes.length > 0) { %>
                        <% themes.forEach(theme => { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="theme-card">
                                    <% if (theme.is_default) { %>
                                        <div class="default-badge">Default</div>
                                    <% } %>
                                    
                                    <!-- Theme Preview -->
                                    <div class="theme-preview">
                                        <div class="theme-preview-wireframe">
                                            <div class="wireframe-header">[HEADER]</div>
                                            <div class="wireframe-main">[MAIN CONTENT]</div>
                                            <div class="wireframe-footer">[FOOTER]</div>
                                        </div>
                                    </div>
                                    
                                    <!-- Theme Info -->
                                    <div class="theme-info">
                                        <h5 class="mb-2"><%= theme.name %></h5>
                                        <% if (theme.description) { %>
                                            <p class="text-muted small mb-3"><%= theme.description %></p>
                                        <% } %>
                                        
                                        <!-- Color Preview -->
                                        <% if (theme.css_variables) { %>
                                            <div class="mb-3">
                                                <small class="text-muted d-block">Colors:</small>
                                                <% try { %>
                                                    <% const colors = JSON.parse(theme.css_variables); %>
                                                    <% if (colors.primary) { %>
                                                        <span class="theme-color-preview" style="background-color: <%= colors.primary %>"></span>
                                                    <% } %>
                                                    <% if (colors.secondary) { %>
                                                        <span class="theme-color-preview" style="background-color: <%= colors.secondary %>"></span>
                                                    <% } %>
                                                    <% if (colors.accent) { %>
                                                        <span class="theme-color-preview" style="background-color: <%= colors.accent %>"></span>
                                                    <% } %>
                                                <% } catch(e) { %>
                                                    <small class="text-muted">-</small>
                                                <% } %>
                                            </div>
                                        <% } %>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3 me-1"></i>
                                                <%= new Date(theme.created_at).toLocaleDateString() %>
                                            </small>
                                            <small class="text-muted">
                                                <i class="bi bi-shop me-1"></i>
                                                0 stores
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <!-- Theme Actions -->
                                    <div class="theme-actions">
                                        <div class="btn-group w-100" role="group">
                                            <a href="/admin/themes/builder?edit=<%= theme.id %>" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil me-1"></i>Edit
                                            </a>
                                            <button type="button" class="btn btn-outline-secondary" onclick="duplicateTheme(<%= theme.id %>)">
                                                <i class="bi bi-copy me-1"></i>Duplicate
                                            </button>
                                            <button type="button" class="btn btn-outline-danger" onclick="deleteTheme(<%= theme.id %>)" <%= theme.is_default ? 'disabled' : '' %>>
                                                <i class="bi bi-trash me-1"></i>Delete
                                            </button>
                                        </div>
                                        <div class="mt-2">
                                            <a href="/admin/themes/assignments?theme=<%= theme.id %>" class="btn btn-sm btn-outline-info w-100">
                                                <i class="bi bi-shop me-1"></i>Assign to Stores
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="bi bi-palette" style="font-size: 4rem; color: #e9ecef;"></i>
                                <h4 class="mt-4 text-muted">No themes created yet</h4>
                                <p class="text-muted mb-4">Create your first website theme to get started</p>
                                <a href="/admin/themes/builder" class="btn create-btn btn-lg">
                                    <i class="bi bi-plus-circle me-2"></i>Create Your First Theme
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        async function duplicateTheme(themeId) {
            const newName = prompt('Enter name for duplicated theme:');
            if (!newName) return;
            
            try {
                const response = await fetch(`/admin/themes/${themeId}/duplicate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name: newName })
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Theme duplicated successfully!');
                    location.reload();
                } else {
                    alert('Failed to duplicate theme: ' + result.error);
                }
            } catch (error) {
                alert('Failed to duplicate theme');
            }
        }
        
        async function deleteTheme(themeId) {
            if (!confirm('Are you sure you want to delete this theme? This action cannot be undone.')) return;
            
            try {
                const response = await fetch(`/admin/themes/${themeId}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Theme deleted successfully!');
                    location.reload();
                } else {
                    alert('Failed to delete theme: ' + result.error);
                }
            } catch (error) {
                alert('Failed to delete theme');
            }
        }
    </script>
</body>
</html>