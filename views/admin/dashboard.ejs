<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="admin-page">
    <%- include('../partials/admin-nav', { currentPage: 'dashboard' }) %>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="bi bi-speedometer2 text-primary me-2"></i>
                            Admin Dashboard
                        </h1>
                        <p class="text-muted mb-0">Manage your e-commerce stores</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="/admin/company-profile" class="btn btn-outline-primary">
                            <i class="bi bi-building me-2"></i>Company Profile
                        </a>
                        <a href="/admin/site-setup" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Create New Store
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="display-6 text-primary mb-2">
                            <i class="bi bi-shop"></i>
                        </div>
                        <h3 class="h4 mb-1"><%= totalStores %></h3>
                        <p class="text-muted mb-0">Total Stores</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="display-6 text-success mb-2">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <h3 class="h4 mb-1"><%= activeStores %></h3>
                        <p class="text-muted mb-0">Active Stores</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="display-6 text-info mb-2">
                            <i class="bi bi-globe"></i>
                        </div>
                        <h3 class="h4 mb-1"><%= stores.filter(s => s.shopify_connected).length %></h3>
                        <p class="text-muted mb-0">Shopify Connected</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="display-6 text-warning mb-2">
                            <i class="bi bi-clock"></i>
                        </div>
                        <h3 class="h4 mb-1"><%= stores.filter(s => s.status === 'pending').length %></h3>
                        <p class="text-muted mb-0">Pending Setup</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stores List -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Your Stores
                        </h5>
                    </div>
                    <div class="card-body p-0" style="min-height: 400px;">
                        <% if (stores.length === 0) { %>
                            <div class="text-center py-5">
                                <div class="display-1 text-muted mb-3">
                                    <i class="bi bi-shop"></i>
                                </div>
                                <h4>No stores yet</h4>
                                <p class="text-muted mb-4">Get started by creating your first e-commerce store</p>
                                <a href="/admin/site-setup" class="btn btn-primary btn-lg">
                                    <i class="bi bi-plus-circle me-2"></i>Create Your First Store
                                </a>
                            </div>
                        <% } else { %>
                            <div class="table-responsive" style="min-height: 400px;">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Store Name</th>
                                            <th>Domain</th>
                                            <th>Country</th>
                                            <th>Status</th>
                                            <th>Deployment</th>
                                            <th>Legal Pages</th>
                                            <th>Shopify</th>
                                            <th>Created</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% stores.forEach(function(store) { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            <%= store.name.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0"><%= store.name %></h6>
                                                            <small class="text-muted">UUID: <%= store.uuid.substring(0, 8) %>...</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <a href="https://<%= store.domain %>" target="_blank" class="text-decoration-none">
                                                        <%= store.domain %>
                                                        <i class="bi bi-box-arrow-up-right ms-1"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <span class="badge bg-light text-dark">
                                                        <%= store.country %> | <%= store.currency %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (store.status === 'active') { %>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i>Active
                                                        </span>
                                                    <% } else if (store.status === 'pending') { %>
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-clock me-1"></i>Pending
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">
                                                            <i class="bi bi-pause-circle me-1"></i>Inactive
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="deployment-status" data-store-uuid="<%= store.uuid %>">
                                                        <span class="badge bg-secondary">Loading...</span>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex flex-column">
                                                        <small class="text-info">
                                                            <i class="bi bi-file-earmark-text me-1"></i>Professional
                                                        </small>
                                                        <small class="text-muted">
                                                            T&C, Privacy, Refund
                                                        </small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (store.shopify_connected) { %>
                                                        <span class="text-success">
                                                            <i class="bi bi-check-circle-fill me-1"></i>Connected
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">
                                                            <i class="bi bi-x-circle me-1"></i>Not Connected
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="d-flex flex-column">
                                                        <small class="text-muted">
                                                            Created: <%= new Date(store.created_at).toLocaleDateString() %>
                                                        </small>
                                                        <% if (store.deployed_at) { %>
                                                            <small class="text-success">
                                                                Updated: <%= new Date(store.deployed_at).toLocaleDateString() %>
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="https://<%= store.domain %>" target="_blank" class="btn btn-outline-primary" title="View Live Store">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                                            <span class="visually-hidden">Toggle Dropdown</span>
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <!-- STORE MANAGEMENT -->
                                                            <li><h6 class="dropdown-header text-muted small">
                                                                <i class="bi bi-shop me-1"></i>Store Management
                                                            </h6></li>
                                                            <li><a class="dropdown-item" href="/admin/stores/<%= store.uuid %>">
                                                                <i class="bi bi-info-circle me-2"></i>View Details
                                                            </a></li>
                                                            <li><a class="dropdown-item" href="#" onclick="editStore('<%= store.uuid %>')">
                                                                <i class="bi bi-pencil me-2"></i>Edit Basic Details
                                                            </a></li>
                                                            <li><a class="dropdown-item" href="/admin/site-setup?store=<%= store.uuid %>">
                                                                <i class="bi bi-sliders me-2"></i>Edit Advanced Settings
                                                            </a></li>
                                                            
                                                            <!-- CONTENT & DEPLOYMENT -->
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li><h6 class="dropdown-header text-muted small">
                                                                <i class="bi bi-cloud-upload me-1"></i>Content & Deployment
                                                            </h6></li>
                                                            <li><a class="dropdown-item" href="#" onclick="regenerateLegalPages('<%= store.uuid %>')">
                                                                <i class="bi bi-file-earmark-text me-2"></i>Regenerate Legal Pages
                                                            </a></li>
                                                            <li><a class="dropdown-item" href="#" onclick="regenerateStore('<%= store.uuid %>')">
                                                                <i class="bi bi-arrow-clockwise me-2"></i>Regenerate All Content
                                                            </a></li>
                                                            <li><a class="dropdown-item deployment-action" href="#" onclick="smartDeploy('<%= store.uuid %>')" data-store-uuid="<%= store.uuid %>">
                                                                <i class="bi bi-rocket me-2"></i><span class="deploy-text">Deploy Changes</span>
                                                            </a></li>
                                                            
                                                            <!-- DANGER ZONE -->
                                                            <li><hr class="dropdown-divider"></li>
                                                            <li><h6 class="dropdown-header text-danger small">
                                                                <i class="bi bi-exclamation-triangle me-1"></i>Danger Zone
                                                            </h6></li>
                                                            <li><a class="dropdown-item text-danger" href="#" onclick="deleteStore('<%= store.uuid %>')">
                                                                <i class="bi bi-trash me-2"></i>Delete Store
                                                            </a></li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bulk Operations -->
        <% if (stores.length > 0) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0">
                            <i class="bi bi-gear-wide-connected me-2"></i>
                            Bulk Operations
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <button class="btn btn-outline-info w-100" onclick="bulkRegenerateLegal()">
                                    <i class="bi bi-file-earmark-text me-2"></i>Update Legal Pages (All Stores)
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary w-100" onclick="bulkUpdateConfig()">
                                    <i class="bi bi-sliders me-2"></i>Advanced Bulk Operations
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-warning w-100" onclick="bulkRedeploy()">
                                    <i class="bi bi-rocket me-2"></i>Deploy Changes (All Stores)
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-success w-100" onclick="exportStoreData()">
                                    <i class="bi bi-download me-2"></i>Export Store Data
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-primary mb-3">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <h5>Create New Store</h5>
                        <p class="text-muted">Launch a new e-commerce store in minutes</p>
                        <a href="/admin/site-setup" class="btn btn-primary">Get Started</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-info mb-3">
                            <i class="bi bi-palette"></i>
                        </div>
                        <h5>Template Builder</h5>
                        <p class="text-muted">Customize product page designs</p>
                        <a href="/admin/product-template" class="btn btn-info">Design Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="display-4 text-success mb-3">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h5>Analytics</h5>
                        <p class="text-muted">Track performance across all stores</p>
                        <button class="btn btn-success" disabled>Coming Soon</button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Help Section -->
        <% if (stores.length > 0) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-3">
                        <h6 class="mb-0 text-muted">
                            <i class="bi bi-info-circle me-2"></i>
                            Store Management Guide
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <div class="text-center p-3">
                                    <i class="bi bi-pencil text-primary mb-2" style="font-size: 1.5rem;"></i>
                                    <h6>Edit Details</h6>
                                    <small class="text-muted">Update store name, domain, colors, and contact information</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3">
                                    <i class="bi bi-file-earmark-text text-info mb-2" style="font-size: 1.5rem;"></i>
                                    <h6>Legal Pages</h6>
                                    <small class="text-muted">Regenerate professional terms, privacy, and refund policies</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3">
                                    <i class="bi bi-arrow-clockwise text-warning mb-2" style="font-size: 1.5rem;"></i>
                                    <h6>Redeploy</h6>
                                    <small class="text-muted">Push changes live or fix deployment issues</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center p-3">
                                    <i class="bi bi-gear-wide-connected text-success mb-2" style="font-size: 1.5rem;"></i>
                                    <h6>Bulk Operations</h6>
                                    <small class="text-muted">Update multiple stores at once for efficiency</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p>&copy; 2024 MultiStore Platform. Built with excellence by the Dream Team.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Load deployment status for all stores
        async function loadDeploymentStatuses() {
            try {
                const response = await fetch('/api/stores');
                const data = await response.json();
                
                if (data.success) {
                    data.stores.forEach(store => {
                        const statusElement = document.querySelector(`[data-store-uuid="${store.uuid}"]`);
                        if (statusElement) {
                            let badgeClass = 'bg-secondary';
                            let icon = 'bi-question-circle';
                            let text = 'Unknown';
                            
                            switch (store.deployment_status) {
                                case 'deployed':
                                    badgeClass = 'bg-success';
                                    icon = 'bi-check-circle';
                                    text = 'Deployed';
                                    break;
                                case 'deploying':
                                    badgeClass = 'bg-warning';
                                    icon = 'bi-clock';
                                    text = 'Deploying';
                                    break;
                                case 'failed':
                                    badgeClass = 'bg-danger';
                                    icon = 'bi-x-circle';
                                    text = 'Failed';
                                    break;
                                default:
                                    badgeClass = 'bg-secondary';
                                    icon = 'bi-pause-circle';
                                    text = 'Pending';
                            }
                            
                            statusElement.innerHTML = `
                                <span class="badge ${badgeClass}">
                                    <i class="${icon} me-1"></i>${text}
                                </span>
                            `;
                            
                            // Update deployment action text based on status
                            const actionElement = document.querySelector(`[data-store-uuid="${store.uuid}"].deployment-action`);
                            if (actionElement) {
                                const deployText = actionElement.querySelector('.deploy-text');
                                if (deployText) {
                                    if (store.deployment_status === 'deployed') {
                                        deployText.textContent = 'Redeploy Changes';
                                        actionElement.querySelector('i').className = 'bi bi-arrow-clockwise me-2';
                                    } else if (store.deployment_status === 'deploying') {
                                        deployText.textContent = 'Deploying...';
                                        actionElement.querySelector('i').className = 'bi bi-clock me-2';
                                        actionElement.onclick = null;
                                    } else {
                                        deployText.textContent = 'Deploy Store';
                                        actionElement.querySelector('i').className = 'bi bi-rocket me-2';
                                    }
                                }
                            }
                        }
                    });
                }
            } catch (error) {
                console.error('Failed to load deployment statuses:', error);
            }
        }
        
        // Deploy store
        async function deployStore(uuid) {
            if (!confirm('Deploy this store? This will generate all store files and make the store live.')) {
                return;
            }
            
            const statusElement = document.querySelector(`[data-store-uuid="${uuid}"]`);
            if (statusElement) {
                statusElement.innerHTML = '<span class="badge bg-warning"><i class="bi bi-clock me-1"></i>Deploying...</span>';
            }
            
            try {
                const response = await fetch(`/api/stores/${uuid}/deploy`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('Store deployed successfully! It is now live at: https://' + data.store.domain);
                    loadDeploymentStatuses();
                } else {
                    alert('Deployment failed: ' + data.error);
                    loadDeploymentStatuses();
                }
            } catch (error) {
                console.error('Deploy error:', error);
                alert('Deployment failed. Please try again.');
                loadDeploymentStatuses();
            }
        }
        
        // Regenerate store files
        async function regenerateStore(uuid) {
            if (!confirm('Regenerate store files? This will rebuild all pages and may cause temporary downtime.')) {
                return;
            }
            
            const statusElement = document.querySelector(`[data-store-uuid="${uuid}"]`);
            if (statusElement) {
                statusElement.innerHTML = '<span class="badge bg-warning"><i class="bi bi-arrow-clockwise me-1"></i>Regenerating...</span>';
            }
            
            try {
                const response = await fetch(`/api/stores/${uuid}/regenerate`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('Store files regenerated successfully!');
                    loadDeploymentStatuses();
                } else {
                    alert('Regeneration failed: ' + data.error);
                    loadDeploymentStatuses();
                }
            } catch (error) {
                console.error('Regeneration error:', error);
                alert('Regeneration failed. Please try again.');
                loadDeploymentStatuses();
            }
        }
        
        // Load live stores
        function loadLiveStores() {
            fetch('/api/stores')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const liveStores = data.stores.filter(s => s.deployment_status === 'deployed');
                        if (liveStores.length === 0) {
                            alert('No live stores found. Deploy some stores first!');
                            return;
                        }
                        
                        let message = 'Live Stores:\n\n';
                        liveStores.forEach(store => {
                            message += `• ${store.name}\n  https://${store.domain}\n\n`;
                        });
                        
                        alert(message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to load live stores');
                });
        }
        
        function deleteStore(storeUuid) {
            if (confirm('Are you sure you want to delete this store? This action cannot be undone and will remove all files.')) {
                fetch(`/api/stores/${storeUuid}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Failed to delete store: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete store');
                });
            }
        }
        
        // Edit store details
        async function editStore(uuid) {
            try {
                const response = await fetch(`/api/stores/${uuid}`);
                const data = await response.json();
                
                if (data.success) {
                    showEditStoreModal(data.store);
                } else {
                    alert('Failed to load store details: ' + data.error);
                }
            } catch (error) {
                console.error('Error loading store details:', error);
                alert('Failed to load store details');
            }
        }
        
        // Show edit store modal
        function showEditStoreModal(store) {
            const modalHtml = `
                <div class="modal fade" id="editStoreModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Store: ${store.name}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <form id="editStoreForm">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Store Name</label>
                                                <input type="text" class="form-control" name="name" value="${store.name}" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Domain</label>
                                                <input type="text" class="form-control" name="domain" value="${store.domain}" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Country</label>
                                                <input type="text" class="form-control" name="country" value="${store.country}">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Currency</label>
                                                <input type="text" class="form-control" name="currency" value="${store.currency}">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label class="form-label">Language</label>
                                                <input type="text" class="form-control" name="language" value="${store.language}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Support Email</label>
                                                <input type="email" class="form-control" name="support_email" value="${store.support_email || ''}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Support Phone</label>
                                                <input type="text" class="form-control" name="support_phone" value="${store.support_phone || ''}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Business Address</label>
                                        <textarea class="form-control" name="business_address" rows="2">${store.business_address || ''}</textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Primary Color</label>
                                                <input type="color" class="form-control form-control-color" name="primary_color" value="${store.primary_color || '#007cba'}">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label">Secondary Color</label>
                                                <input type="color" class="form-control form-control-color" name="secondary_color" value="${store.secondary_color || '#f8f9fa'}">
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary" onclick="saveStoreChanges('${store.uuid}')">Save Changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            // Remove existing modal if any
            const existingModal = document.getElementById('editStoreModal');
            if (existingModal) {
                existingModal.remove();
            }
            
            // Add modal to body
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('editStoreModal'));
            modal.show();
        }
        
        // Save store changes
        async function saveStoreChanges(uuid) {
            const form = document.getElementById('editStoreForm');
            const formData = new FormData(form);
            const updateData = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch(`/api/stores/${uuid}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(updateData)
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editStoreModal'));
                    modal.hide();
                    
                    // Reload page to show changes
                    location.reload();
                } else {
                    alert('Failed to update store: ' + data.error);
                }
            } catch (error) {
                console.error('Error updating store:', error);
                alert('Failed to update store');
            }
        }
        
        // Regenerate legal pages for a store
        async function regenerateLegalPages(uuid) {
            if (!confirm('Regenerate legal pages for this store? This will update terms, privacy, refund, and delivery pages with professional templates.')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/stores/${uuid}/regenerate-legal`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert('Legal pages regenerated successfully!');
                } else {
                    alert('Failed to regenerate legal pages: ' + data.error);
                }
            } catch (error) {
                console.error('Error regenerating legal pages:', error);
                alert('Failed to regenerate legal pages');
            }
        }
        
        // Smart deployment - context aware
        async function smartDeploy(uuid) {
            const statusElement = document.querySelector(`[data-store-uuid="${uuid}"]`);
            const isDeployed = statusElement && statusElement.textContent.includes('Deployed');
            
            const action = isDeployed ? 'redeploy' : 'deploy';
            const message = isDeployed ? 
                'Redeploy this store? This will update the live site with any changes.' :
                'Deploy this store? This will generate all store files and make the store live.';
            
            if (!confirm(message)) {
                return;
            }
            
            if (statusElement) {
                statusElement.innerHTML = `<span class="badge bg-warning"><i class="bi bi-clock me-1"></i>${isDeployed ? 'Redeploying...' : 'Deploying...'}</span>`;
            }
            
            try {
                const response = await fetch(`/api/stores/${uuid}/deploy`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert(`Store ${isDeployed ? 'redeployed' : 'deployed'} successfully! It is now live at: https://${data.store.domain}`);
                    loadDeploymentStatuses();
                } else {
                    alert(`${isDeployed ? 'Redeployment' : 'Deployment'} failed: ${data.error}`);
                    loadDeploymentStatuses();
                }
            } catch (error) {
                console.error(`${action} error:`, error);
                alert(`${isDeployed ? 'Redeployment' : 'Deployment'} failed. Please try again.`);
                loadDeploymentStatuses();
            }
        }
        
        // Bulk operations
        async function bulkRegenerateLegal() {
            if (!confirm('Regenerate legal pages for ALL stores? This may take a while.')) {
                return;
            }
            
            try {
                const response = await fetch('/api/stores/bulk/regenerate-legal', {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert(`Legal pages regenerated for ${data.updated} stores!`);
                } else {
                    alert('Failed to regenerate legal pages: ' + data.error);
                }
            } catch (error) {
                console.error('Error in bulk legal regeneration:', error);
                alert('Failed to regenerate legal pages');
            }
        }
        
        async function bulkUpdateConfig() {
            alert('Bulk configuration update feature coming soon!');
        }
        
        async function bulkRedeploy() {
            if (!confirm('Redeploy ALL stores? This may take a while and cause temporary downtime.')) {
                return;
            }
            
            try {
                const response = await fetch('/api/stores/bulk/redeploy', {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    alert(`Started redeployment for ${data.count} stores!`);
                    // Refresh page to see updated statuses
                    setTimeout(() => location.reload(), 2000);
                } else {
                    alert('Failed to start bulk redeployment: ' + data.error);
                }
            } catch (error) {
                console.error('Error in bulk redeploy:', error);
                alert('Failed to start bulk redeployment');
            }
        }
        
        async function exportStoreData() {
            try {
                const response = await fetch('/api/stores/export');
                const blob = await response.blob();
                
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `stores-export-${new Date().toISOString().split('T')[0]}.json`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
            } catch (error) {
                console.error('Error exporting store data:', error);
                alert('Failed to export store data');
            }
        }
        
        // Load deployment statuses on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadDeploymentStatuses();
        });
    </script>
